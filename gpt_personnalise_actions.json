{
  "openapi": "3.1.0",
  "info": {
    "title": "Actions GPT Personnalisé",
    "description": "Définition des actions pour la génération de scripts, articles et publications",
    "version": "1.0.1"
  },
  "servers": [
    {
      "url": "https://raw.githubusercontent.com/nicoexphand/ChatGPTperso/main",
      "description": "Serveur GitHub"
    }
  ],
  "paths": {
    "/generate-script-plan": {
      "post": {
        "summary": "Génère 2-3 plans de script avec frameworks",
        "operationId": "generateScriptPlan",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "theme": { "type": "string", "description": "Thème du script" },
                  "notes": { "type": "string", "description": "Notes ou plan fourni par l'utilisateur", "nullable": true }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Réponse avec 2-3 plans de script",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "plans": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "title": { "type": "string" },
                          "framework": { "type": "string" },
                          "structure": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/generate-script": {
      "post": {
        "summary": "Génère un script complet basé sur le plan choisi",
        "operationId": "generateScript",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "planChosen": { "type": "string", "description": "Plan de script sélectionné" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Script généré",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "script": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/generate-seo-description": {
      "post": {
        "summary": "Génère une description SEO pour la vidéo YouTube",
        "operationId": "generateSeoDescription",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "script": { "type": "string", "description": "Script de la vidéo" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Description SEO générée",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "seoDescription": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/generate-blog-articles": {
      "post": {
        "summary": "Propose 2-3 articles de blog basés sur le script",
        "operationId": "generateBlogArticles",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "script": { "type": "string", "description": "Script de la vidéo" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Articles de blog proposés",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "articles": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/generate-blog-direct": {
      "post": {
        "summary": "Génère un article de blog immédiatement à partir des ressources",
        "operationId": "generateBlogDirect",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "theme": { "type": "string", "description": "Thème du blog" },
                  "tone": { "type": "string", "description": "Ton souhaité (informatif, narratif, éducatif...)", "nullable": true }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Article de blog généré",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "blogArticle": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/generate-social-posts": {
      "post": {
        "summary": "Propose 2-3 publications pour les réseaux sociaux",
        "operationId": "generateSocialPosts",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "script": { "type": "string", "description": "Script de la vidéo" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Publications réseaux sociaux générées",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "posts": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/youtube-to-blog-plan": {
      "post": {
        "summary": "Propose un plan pour un article de blog à partir d’une vidéo YouTube",
        "operationId": "generateYoutubeToBlogPlan",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "youtubeLink": { "type": "string", "description": "Lien de la vidéo YouTube", "nullable": true },
                  "notes": { "type": "string", "description": "Notes ou plan fourni par l'utilisateur", "nullable": true }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Propose 2-3 plans détaillés avec frameworks narratifs",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "plans": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "title": { "type": "string" },
                          "framework": { "type": "string" },
                          "structure": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
