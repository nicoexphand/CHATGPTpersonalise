{
  "openapi": "3.1.0",
  "info": {
    "title": "Actions GPT Personnalisé",
    "description": "Définition des actions pour la génération de scripts, articles et publications",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://raw.githubusercontent.com/nicoexphand/ChatGPTperso/main",
      "description": "Serveur GitHub"
    }
  ],
  "paths": {
    "/script-to-blog": {
      "post": {
        "summary": "Génère 2-3 plans d'articles de blog à partir d'un script vidéo",
        "operationId": "generateScriptToBlog",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "theme": { "type": "string", "description": "Thème de l'article" },
                  "notes": { "type": "string", "description": "Notes ou plan fourni par l'utilisateur", "nullable": true }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Propositions de 2-3 plans d'article de blog",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "plans": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "title": { "type": "string" },
                          "framework": { "type": "string" },
                          "structure": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/direct-blog": {
      "post": {
        "summary": "Génère un article de blog directement sans passer par l’étape des plans",
        "operationId": "generateDirectBlog",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "theme": { "type": "string", "description": "Thème de l'article" },
                  "notes": { "type": "string", "description": "Notes ou plan fourni par l'utilisateur", "nullable": true }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Article de blog généré",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "article": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/generate-seo-description": {
      "post": {
        "summary": "Génère une description SEO pour la vidéo YouTube",
        "operationId": "generateSeoDescription",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "script": { "type": "string", "description": "Script de la vidéo" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Description SEO générée",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "seoDescription": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/generate-social-posts": {
      "post": {
        "summary": "Propose 2-3 publications pour les réseaux sociaux",
        "operationId": "generateSocialPosts",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "script": { "type": "string", "description": "Script de la vidéo ou article du blog" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Publications réseaux sociaux générées",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "posts": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
